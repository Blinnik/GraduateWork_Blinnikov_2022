include includes/mixins

doctype html
html
    head 
        include includes/header.pug
        script(src='https://cdn.jsdelivr.net/npm/fuse.js/dist/fuse.js', type="text/javascript", defer)
        script(src='/js/commands.js', type="text/javascript", defer)
        script(defer).
            let commands = !{JSON.stringify(commands)};
        link(rel='stylesheet', type='text/css', href='/css/index.css')
        link(rel='stylesheet', type='text/css', href='/css/commands.css')
    body.bg-light
        include includes/navbar.pug
        .container
            .p-5.mb-4.rounded-3.text-center
                h1.display-5.fw-bold Commands
                p.fs-4 Here you can check all available commands
                hr
            section#commands
                .d-flex.justify-content-center
                    #search.form-group.p-3
                        input.form-control(type='search')
                    button.btn
                        i.fas.fa-search
                .row
                    .col-sm-3.categories
                        each category in categories
                            +category(category)  
                    .col-sm-9.commands
                        each command in commands
                            +command(command)
                        p#commandError
