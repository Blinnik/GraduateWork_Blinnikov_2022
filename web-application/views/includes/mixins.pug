mixin category(category)
    ul.list-group.mb-2
        li.list-group-item(id=category.id)
            .icon.d-inline #[i(class=category.icon)] 
            .ms-2.d-inline #{category.name}

mixin command(command)
    ul.list-group.mb-2(id=command.name + 'Command', class=command.category) 
        li.list-group-item
            div 
                code 
                    b.fs-5 #{command.name + ' '}
            if command.aliases != '-'
                div 
                    span Aliases: 
                        b #{command.aliases}
            div 
                span 
                    span Description: #{command.description}